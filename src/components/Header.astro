---
import * as Icon from "@astropub/icons";
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<nav>
		<h2>{Astro.url.pathname === "/" ? "" : <a href="/">{SITE_TITLE}</a>}</h2>
		<div class="internal-links">
			<HeaderLink href="/about" alt="about">
				<Icon.Person size={20} fill="currentColor" title="About" />
			</HeaderLink>
			<HeaderLink href="/rss.xml" alt="rss">
				<Icon.Globe size={20} fill="currentColor" title="RSS" />
			</HeaderLink>
			<HeaderLink href="/archive" alt="archive">
				<Icon.Archive size={20} fill="currentColor" title="Archive" />
			</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0.5rem 1rem;
		position: absolute;
		width: 100%;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
	}
	.internal-links {
		display: flex;
		flex-grow: 1;
		justify-content: flex-end;
		align-items: center;
		gap: 0.5rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--foreground);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a:hover {
		color: var(--accent);
	}

	nav .internal-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 48px;
		height: 48px;
		border-radius: 0.75rem;
		transition: background 100ms, color 100ms;
	}

	nav .internal-links a:hover {
		color: var(--background);
		background: var(--foreground);
	}

	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
